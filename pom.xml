<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.jamesward</groupId>
    <artifactId>multi</artifactId>
    <version>1.1</version>
    <packaging>pom</packaging>
    <name>multi</name>
    <modules>
        <module>core</module>
        <module>app</module>
    </modules>
    
    <scm>
        <connection>scm:git:https://github.com/Nani0406/maven-multi-module-example.git</connection>
        <url>https://github.com/Nani0406/maven-multi-module-example.git</url>
        <developerConnection>scm:git:https://Nani0406:Nani@0406@github.com/Nani0406/maven-multi-module-example.git</developerConnection>
        <tag>v1.1</tag>
  </scm>
    
  <distributionManagement>
    <snapshotRepository>
      <id>nexus</id>
      <url>http://13.234.240.58:8081/nexus/content/repositories/snapshots</url>
    </snapshotRepository>
    <repository>
      <id>nexus</id>
      <url>http://13.234.240.58:8081/nexus/content/repositories/releases</url>
    </repository>
 </distributionManagement>
  
  <build>
    <plugins>
       <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-release-plugin</artifactId>
         <version>3.0.0-M1</version>
         <configuration>
            <tagNameFormat>v@{project.version}</tagNameFormat>
            
         </configuration>
       </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-resources-plugin</artifactId>
            <version>2.7</version>
          <dependencies>
            <dependency>
                <groupId>org.apache.maven.shared</groupId>
                <artifactId>maven-filtering</artifactId>
                <version>1.3</version>
            </dependency>
          </dependencies>
        </plugin>
    </plugins>
  </build>
    
</project>
